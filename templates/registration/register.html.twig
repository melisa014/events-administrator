{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Регистрация</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.firstName, {label: 'Имя'}) }}
        {{ form_row(registrationForm.middleName, {label: 'Отчество'}) }}
        {{ form_row(registrationForm.lastName, {label: 'Фамилия'}) }}

        {{ form_row(registrationForm.phone, {label: 'Номер телефона'})  }}
        {{ form_row(registrationForm.plainPassword, {label: 'Пароль'}) }}
        {{ form_row(registrationForm.confirmPassword, {label: 'Подтвердите пароль'}) }}
        {{ form_row(registrationForm.agreeTerms, {label: 'Я согласен на всё: я люблю приключения'})  }}

        <button type="submit" class="btn">Регистрация</button>
    {{ form_end(registrationForm) }}
{% endblock %}
